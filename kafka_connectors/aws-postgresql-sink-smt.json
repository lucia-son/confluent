{"name": "aws-postgresql-sink-01",
 "config": {
  "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
  "name": "aws-postgresql-sink-01",
  "delete.enabled": "true",
  "connection.url": <postgresql_jdbc_connection_url>,
  "connection.user": <user>,
  "connection.password": <password>,
  "topics": <topic>,
  "input.data.format": "AVRO",
  "input.key.format": "AVRO",
  "delete.enabled": "true",
  "ssl.mode": "prefer",
  "insert.mode": "UPSERT",
  "db.timezone": "Asia/Seoul",
  "pk.mode": "record_key",
  "pk.fields": <pk.field>,
  "auto.create": "true",
  "tasks.max": "1",
  "transforms": "flatten,dropCC,route,findTombstone",
  "transforms.flatten.type": "org.apache.kafka.connect.transforms.Flatten$Value",
  "transforms.dropCC.type" : "org.apache.kafka.connect.transforms.ReplaceField$Value",
  "transforms.dropCC.blacklist": "source.version,source.connector,source.name,source.ts_ms",
  "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
  "transforms.route.regex": "([^.]+)\\.([^.]+)\\.([^.]+)",
  "transforms.route.replacement": "$2.$3",
  "transforms.findTombstone.type": "com.kyobo.book.kafka.connect.transform.SpecificValueToTombstone",
  "transforms.findTombstone.tombstone.field":"op",
  "transforms.findTombstone.tombstone.value":"d",
  "value.converter": "io.confluent.connect.avro.AvroConverter",
  " value.converter.schema.registry.url": "http://schema-registry:8081",
  "key.converter": "io.confluent.connect.avro.AvroConverter",
  "key.converter.schema.registry.url": "http://schema-registry:8081"
   }
}

